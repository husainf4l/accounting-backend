model User {
    id        String   @id @default(uuid())
    email     String   @unique
    password  String
    name      String
    role      UserRole @default(USER)
    companyId String? // Nullable if a user can exist without being tied to a company
    company   Company? @relation(fields: [companyId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Company {
    id        String   @id @default(uuid())
    name      String
    address   String?
    phone     String?
    email     String   @unique
    website   String?
    industry  String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    users     User[]
}

enum UserRole {
    USER
    ADMIN
    SUPERADMIN
}
